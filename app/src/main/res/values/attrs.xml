<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--圆弧进度条-->
    <declare-styleable name="TasksCompletedView">
        <attr name="radius" format="dimension"/>
        <attr name="strokeWidth" format="dimension"/>
        <attr name="circleColor" format="color"/>
        <attr name="ringColor" format="color"/>
        <attr name="ringBgColor" format="color"/>
        <attr name="startRingColor" format="color"/>
        <attr name="endRingColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RadarWaveView">
        <!--是否展示双波-->
        <attr name="showDoubleWave" format="boolean"/>
        <!--波形颜色-->
        <attr name="waveColor" format="color" />
        <attr name="wave2Color" format="color" />
        <!--振幅-->
        <attr name="waveAmplitude" format="dimension" />
        <attr name="wave2Amplitude" format="dimension" />
        <!--波形移动速度-->
        <attr name="waveSpeed" format="float" />
        <attr name="wave2Speed" format="float" />
        <!--开始位置相差多少个周期-->
        <attr name="waveStartPeriod" format="float" />
        <attr name="wave2StartPeriod" format="float" />
        <!--是否开始波形-->
        <attr name="waveStart" format="boolean" />
        <!--是否填充顶部后者底部-->
        <attr name="waveFillTop" format="boolean" />
        <attr name="waveFillBottom" format="boolean" />

        <attr name="waveFillType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <!--波形是正弦还是余弦-->
        <attr name="waveType" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>

    </declare-styleable>

    <declare-styleable name="RulerView">
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineSpaceWidth" format="dimension" />
        <attr name="lineWidth" format="dimension" />
        <attr name="lineMaxHeight" format="dimension" />
        <attr name="lineMidHeight" format="dimension" />
        <attr name="lineMinHeight" format="dimension" />
        <attr name="textMarginTop" format="dimension" />
        <attr name="alphaEnable" format="boolean" />
        <attr name="backgroundColor" format="color"/>
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="selectorValue" format="float"/>
        <attr name="perValue" format="float"/>
        <attr name="perLineCount" format="integer"/>
        <attr name="pointerType" format="enum">
            <enum name="line" value="0"/>
            <enum name="pointer" value="1"/>
        </attr>
        <!--当type=1时-->
        <attr name="middlePointer" format="reference"/>
        <attr name="middlePointerWidth" format="dimension"/>
        <attr name="pointerTop" format="float"/>
        <!--当type=0时-->
        <attr name="pointerColor" format="color"/>
    </declare-styleable>
</resources>