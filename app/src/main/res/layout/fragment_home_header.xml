<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:showIn="@layout/fragment_home">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RadioGroup
        android:id="@+id/rg_home_adv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_adv_p1"
            android:layout_width="5.5dp"
            android:layout_height="5.5dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_rb_home_adv_bg"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/rb_home_adv_p2"
            android:layout_width="5.5dp"
            android:layout_height="5.5dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_rb_home_adv_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_home_adv_p3"
            android:layout_width="5.5dp"
            android:layout_height="5.5dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/selector_rb_home_adv_bg"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_home_adv_p4"
            android:layout_width="5.5dp"
            android:layout_height="5.5dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/selector_rb_home_adv_bg"
            android:button="@null" />

    </RadioGroup>
</RelativeLayout>