<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <com.test.newproject.view.WaveViewBySinCos
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:showDoubleWave="true"
            app:waveAmplitude="15dp"
            app:wave2Amplitude="10dp"
            app:waveFillType="top"
            app:waveSpeed="-2.5"
            app:wave2Speed="-0.8"
            app:waveStart="true"
            app:waveStartPeriod="1"
            app:wave2StartPeriod="1.5"
            app:waveType="sin"
            app:waveColor="#aa78BFF5"
            app:wave2Color="#aa78BFF5"/>

    </LinearLayout>

</RelativeLayout>